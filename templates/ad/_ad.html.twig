{% set url = path('ads_show', {'slug': ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }}
            chambres,
            <strong>{{ ad.price }}&euro; / nuit</strong>
            <br/>
            <small>Pas encore not√©</small>
        </div>
        <a href="{{ url }}">
            <img alt="image appartement" src="{{ ad.coverImage }}" style="height: 200px; width: 100%; display: block">
        </a>

        <div class="card-body">
            <a href="{{ url }}">
                <h4 class="card-title">
                    {{ ad.title }}</h4>
            </a>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a class="btn btn-secondary" href="{{ url }}">En savoir plus</a>
        </div>
    </div>
</div>
