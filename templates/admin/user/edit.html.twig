{% extends "admin/base.html.twig" %}

{% block title %}
    - Modifier l'utilisateur
    {{ user.fullname }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifier l'utilisateur
            {{ user.fullname }}</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success" type="submit">
            <i class="fas fa-check"></i>
            Enregistrer les modifications</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
